<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailPemainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/img_item_foto"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_item_foto"
            android:orientation="vertical"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/tv_item_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pemain"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_item_posisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posisi"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_item_nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Punggung"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_item_negara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Negara"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Pemain"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:lineSpacingMultiplier="1"/>

        <TextView
            android:id="@+id/tv_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="20dp"
            android:maxLines="5"
            android:lineSpacingMultiplier="1"/>
    </LinearLayout>

</FrameLayout>